# Aktifkan Rewrite Engine
RewriteEngine On

# Jadikan index.php sebagai file default direktori
DirectoryIndex index.php

# Aturan khusus untuk URL /showqr/
RewriteRule ^showqr/([0-9]+)$ photoboothpr/photoboothpr/showqr.php?id=$1 [L]

# --- Aturan untuk URL Cantik (Menghilangkan .php) ---

# 1. Alihkan paksa dari namafile.php ke /namafile
# Contoh: Jika ada yang buka /kontak.php, langsung alihkan ke /kontak
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^.]+)\.php\ HTTP/
RewriteRule ^([^.]+)\.php$ /$1 [R=301,L]

# 2. Tulis ulang URL cantik ke file PHP yang sebenarnya di server
# Contoh: Jika user buka /kontak, server akan membuka file kontak.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ $1.php [L]

# --- Pengaturan Keamanan ---

# Nonaktifkan directory listing
Options -Indexes

# Lindungi file .htaccess agar tidak bisa diakses dari web
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>